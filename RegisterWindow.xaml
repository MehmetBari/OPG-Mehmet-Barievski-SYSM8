<Window x:Class="FITTRACK_PROJEKTUPPGIFT_OPG.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FITTRACK_PROJEKTUPPGIFT_OPG"
        mc:Ignorable="d"
        Title="Register" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,5"/>
            <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="0,5"/>
            <ComboBox x:Name="CountryComboBox" Width="200" Margin="0,5" />
            <Button Content="Register" Width="100" Margin="0,10" Click="RegisterButton_Click"/>
            <TextBlock x:Name="WarningText" Foreground="Red" Visibility="Collapsed" Margin="0,10,0,0" Text="Username is already taken"/>
        </StackPanel>
        
    </Grid>
</Window>
