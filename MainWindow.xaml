<Window x:Class="FITTRACK_PROJEKTUPPGIFT_OPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FITTRACK_PROJEKTUPPGIFT_OPG"
        mc:Ignorable="d"
        Title="FitTrack Login" Height="350" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Background="LightGray">
        <Label Content="FitTrack" Background="LightGray" FontSize="24" FontFamily="Arial" Foreground="Crimson" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <StackPanel Background="LightGray" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,5"/>
            <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="0,5"/>

            <Button Content="Sign In" Foreground="Crimson" Width="100" Margin="0,10" Click="SignInButton_Click"/>
            <Button Content="Register" Foreground="Crimson" Width="100" Click="RegisterButton_Click"/>

            <TextBlock x:Name="WarningText" Foreground="Red" Visibility="Collapsed" Margin="0,10,0,0" Text="Invalid username or password"/>


        </StackPanel>
    </Grid>
</Window>
